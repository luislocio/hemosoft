<UserControl
    x:Class="HemoSoft.View.ExibirTriador"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Model="clr-namespace:HemoSoft.Model"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HemoSoft.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    HorizontalAlignment="Center"
    VerticalAlignment="Top"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ObjectDataProvider
            x:Key="opcoesStatusUsuario"
            MethodName="GetValues"
            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Model:StatusUsuario" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <StackPanel Margin="0">
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Text="PERFIL TRIADOR" />
            <TextBox
                x:Name="textNome"
                Margin="0,2"
                materialDesign:HintAssist.Hint="Nome:"
                IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <TextBox
                x:Name="textMatricula"
                Margin="0,2"
                materialDesign:HintAssist.Hint="Matricula: "
                IsReadOnly="True"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <ComboBox
                x:Name="boxStatusUsuario"
                Margin="0,10"
                materialDesign:HintAssist.Hint="Status:"
                IsEnabled="False"
                ItemsSource="{Binding Source={StaticResource opcoesStatusUsuario}}"
                Style="{StaticResource MaterialDesignComboBox}" />
            <Button
                x:Name="buttonEditar"
                Width="100"
                Margin="0,15,0,10"
                HorizontalAlignment="Right"
                Click="ButtonEditar_Click"
                Content="Editar" />
        </StackPanel>
    </Grid>
</UserControl>
