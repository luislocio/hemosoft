<UserControl
    x:Class="HemoSoft.View.CadastrarDoacao"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HemoSoft.View"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="490"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Grid Width="380" Margin="40,0">
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="18"
                Text="CADASTRO DOAÇÃO" />
            <StackPanel Margin="0,20" VerticalAlignment="Center">
                <TextBox
                    x:Name="textPeso"
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Peso"
                    FontFamily="Roboto"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <TextBox
                    x:Name="textPulso"
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Pulso"
                    FontFamily="Roboto"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <TextBox
                    x:Name="textTemperatura"
                    Margin="0,10"
                    materialDesign:HintAssist.Hint="Temperatura"
                    FontFamily="Roboto"
                    FontSize="18"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Bottom"
                            FontFamily="Roboto"
                            FontSize="18"
                            Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                            Text="Bebeu nas ultimas 12 horas?" />
                        <TextBox
                            x:Name="textBebida"
                            Width="60"
                            Margin="20,0"
                            HorizontalAlignment="Right"
                            materialDesign:HintAssist.Hint="# Horas"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </StackPanel>
                    <RadioButton
                        Margin="0,2"
                        Click="RadioButtonBebidaNao_Click"
                        Content="Não"
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}" />
                    <RadioButton
                        Margin="0,2"
                        VerticalAlignment="Bottom"
                        Click="RadioButtonBebidaSim_Click"
                        Content="Sim"
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}" />
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Bottom"
                            FontFamily="Roboto"
                            FontSize="18"
                            Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                            Text="Gravidez recente?" />
                        <TextBox
                            x:Name="textGravidez"
                            Width="60"
                            Margin="20,0"
                            HorizontalAlignment="Right"
                            materialDesign:HintAssist.Hint="# Dias"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </StackPanel>
                    <RadioButton
                        Margin="0,2"
                        Click="RadioButtonGravidezNao_Click"
                        Content="Não"
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}" />
                    <RadioButton
                        Margin="0,2"
                        Click="RadioButtonGravidezNormal_Click"
                        Content="Parto Normal(90 dias)"
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}" />
                    <RadioButton
                        Margin="0,2"
                        Click="RadioButtonGravidezCesarea_Click"
                        Content="Parto Cesárea(180 dias)"
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}" />
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Bottom"
                            FontFamily="Roboto"
                            FontSize="18"
                            Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                            Text="Gripe/resfriado nos ultimos 7 dias?" />
                        <TextBox
                            x:Name="textGripe"
                            Width="60"
                            Margin="20,0"
                            HorizontalAlignment="Right"
                            materialDesign:HintAssist.Hint="# Dias"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </StackPanel>
                    <RadioButton
                        Margin="0,2"
                        Click="RadioButtonGripeNao_Click"
                        Content="Não"
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}" />
                    <RadioButton
                        Margin="0,2"
                        Click="RadioButtonGripeSim_Click"
                        Content="Sim"
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}" />
                </StackPanel>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            VerticalAlignment="Bottom"
                            FontFamily="Roboto"
                            FontSize="18"
                            Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                            Text="Tatuagem nos ultimos 12 meses?" />
                        <TextBox
                            x:Name="textTatuagem"
                            Width="60"
                            Margin="20,0"
                            HorizontalAlignment="Right"
                            materialDesign:HintAssist.Hint="# Meses"
                            IsEnabled="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </StackPanel>
                    <RadioButton
                        Margin="0,2"
                        Click="RadioButtonTatuagemNao_Click"
                        Content="Não"
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}" />
                    <RadioButton
                        Margin="0,2"
                        Click="RadioButtonTatuagemSim_Click"
                        Content="Sim"
                        Style="{StaticResource MaterialDesignUserForegroundRadioButton}" />
                </StackPanel>
                <Button
                    x:Name="ButtonCadastrar"
                    Width="100"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Right"
                    Click="ButtonCadastrar_Click"
                    Content="Cadastrar" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
